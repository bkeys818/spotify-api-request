{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "exclude": ["tests", "jest.config.js", "global-setup.ts"],
    "files": ["src/index.ts"],

    "typedocOptions": {
        "entryPoints": ["src/requests", "src/authorize.ts"],
        "exclude": ["src/requests/index.ts"],
        "excludeInternal": true,
        "disableSources": true,
        "name": "Spotify API Request"
    }
}
