{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src",

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["tests", "jest.config.js", "global-setup.ts", "authorize.ts"],
    "files": ["src/index.ts"]
}
