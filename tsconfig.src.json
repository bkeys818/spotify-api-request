{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./lib",
        "rootDir": "./src",
        "removeComments": true,
    },
    "exclude": [
        "tests",
        "jest.config.js",
        "global-setup.ts"
    ],
    "files": ["src/index.ts"],

    "typedocOptions": {
        "excludeInternal": true,
        "entryPoints": [
            "src/authorize.ts",
            "src/error.ts",
            "src/index.ts",
            "src/objects.ts",
        ],
    }
}